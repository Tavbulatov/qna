$('.flash_message').html('<%= render 'shared/flash' %>');
$('.answer_error[data-answer-id="<%= @answer.id %>"]').html('<%= render 'shared/errors', resource: @answer%>');


<% if !@answer.errors.present? %>
  <% if @answer.question.best_answer == @answer %>
    $('.best_answer').html('<%= j render  'answers/best_answer', best_answer: @answer%>')
  <% else %>
    $('.answer[data-answer-id="<%= @answer.id %>"]').replaceWith('<%= j render @answer %>');
  <% end %>
<% end %>
